{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "devPkg/*"
      ]
    },
    "lib": [
      "es2015",
      "dom",
      "scripthost"
    ]
  },
  "include": [
    "devPkg/**/*.ts",
    "devPkg/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
